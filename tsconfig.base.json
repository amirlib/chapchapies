{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"lib": ["es2023"],
		"module": "esnext",
		"moduleResolution": "bundler",
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": false,
		"paths": {
			"@chapchapies/client-schema": ["apps/client/schema/src/index.ts"],
			"@chapchapies/icons": ["libs/icons/src/index.ts"],
			"@chapchapies/shared-lib": ["libs/shared-lib/src/index.ts"],
			"@chapchapies/shared-server": ["libs/shared-server/src/index.ts"],
			"@chapchapies/shared-ui": ["libs/shared-ui/src/index.ts"],
			"@chapchapies/storybook": ["libs/storybook/src/index.ts"],
			"@chapchapies/tools": ["libs/tools/src/index.ts"]
		},
		"rootDir": ".",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"target": "esnext",
		"strict": true,
		"strictNullChecks": true
	},
	"exclude": ["node_modules", "tmp"]
}
