{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"allowJs": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"outDir": "../../dist/out-tsc",
		"sourceMap": false,
		"strict": true,
		"types": [
			"node"
		]
	},
	"include": [
		"**/*.ts",
		"**/*.js",
		"playwright.config.ts",
		"src/**/*.spec.ts",
		"src/**/*.spec.js",
		"src/**/*.test.ts",
		"src/**/*.test.js",
		"src/**/*.d.ts"
	]
}
